<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="info" packages="gg.rsmod">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="[%p] %d{MMM dd, yyyy H:mm:ss a} [%t] %C{1} %M%n %msg%n"/>
        </Console>
        <File name="File" fileName="error.log" append="false">
            <PatternLayout pattern="[%p] %d{MMM dd, yyyy H:mm:ss a} [%t] %C{1} %M%n %msg%n"/>
        </File>
    </Appenders>
    <Loggers>
        <Root level="debug">
            <AppenderRef level="error" ref="File"/>
            <AppenderRef level="all" ref="Console"/>
        </Root>
        <Logger name="io.guthix.js5" level="warn" additivity="false">
        </Logger>
        <Logger name="io.netty" level="warn" additivity="false">
        </Logger>
    </Loggers>
</Configuration>
